---
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faInstagram, faTiktok, faYoutube } from "@fortawesome/free-brands-svg-icons";

const xiaohongshuIcon = "/images/red.png";
---

<div class="social-icons">
  <!-- Instagram -->
  <a href="https://www.instagram.com/your_username" target="_blank" rel="noopener noreferrer">
    <FontAwesomeIcon icon={faInstagram} size="2x" />
  </a>

  <!-- TikTok -->
  <a href="https://www.tiktok.com/@your_username" target="_blank" rel="noopener noreferrer">
    <FontAwesomeIcon icon={faTiktok} size="2x" />
  </a>

  <!-- YouTube -->
  <a href="https://www.youtube.com/@your_username" target="_blank" rel="noopener noreferrer">
    <FontAwesomeIcon icon={faYoutube} size="2x" />
  </a>

  <!-- 小紅書 (Red) -->
  <a href="https://www.xiaohongshu.com/user/profile/your_username" target="_blank" rel="noopener noreferrer">
    <img src={xiaohongshuIcon} alt="Xiaohongshu" class="custom-icon" />
  </a>

  <p><a href="">COMING SOON</a></p>
</div>

<style>
  .social-icons {
    display: flex;
    gap: 30px; /* アイコンの間隔 */
    justify-content: center;
    align-items: center;
  }

  .social-icons a {
    color: white;
    transition: transform 0.3s ease;
  }

  .social-icons a:hover {
    transform: scale(1.1); /* ホバー時に拡大 */
  }

  .custom-icon {
    width: 40px; /* 小紅書のアイコンサイズ */
    height: auto;
    transition: transform 0.3s ease;
  }

  .custom-icon:hover {
    transform: scale(1.1);
  }


  p {
    font-family: 'Oswald', sans-serif;
  }
</style>
