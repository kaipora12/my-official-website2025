---
import Carousel from "../components/Carousel.astro";
// import SocialIcons from "../components/SocialIcons.astro";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faTwitter } from "@fortawesome/free-brands-svg-icons";
import "../styles/global.css";
---

<main class="main">
  <section class="main-visual">
    <div class="main-text">
      <h1>K A I&emsp;N A K A M U R A</h1>
      <p class="sb-txt">Official site</p>
    </div>
  </section>
  <section class="topicks">
    <h1>PICK UP TOPICKS</h1>
    <Carousel />
    <FontAwesomeIcon icon={faTwitter} size="2x" client:load />
  </section>


    <slot />
  </main>
 
  <style>
    .main {
      background-color: black;
    }
    @keyframes openingKv {
  0% {
    opacity: 0;
    transform: scale(1.2);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.main-visual {
  background-image: url(/images/main-bg.JPG);
  height: 100vh;
  width: 100%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  animation: openingKv 1.5s ease-in-out forwards;
}
.main-text {
  position: absolute;
  top: 80%; /* 50% から 55% に変更して少し下へ */
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 5rem;
  font-weight: bold;
  text-align: center;
  font-family: 'Oswald', sans-serif;
}
.sb-txt {
  font-size: 4rem;
  font-family: "Zen Maru Gothic", serif;
  font-weight: 300;
  font-style: normal;
}

.topicks{

}
.topicks h1 {
  color: white;
  font-weight: bold;
  text-align: center;
  font-family: 'Oswald', sans-serif;
  font-size: 40px;
  margin-top: 20px;
  margin-bottom: 30px;
}
  </style>